doctype html
html
  head
    title PlaneText
    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.1/jquery.min.js")
    javascript:
      window.jQuery || document.write('<script src="#{url('js/lib/jquery.min.js')}">\x3C/script>')
    script(src="#{app_url}/js/index.js")
    css:
      a.dataset, div.new-dataset {
        display: block;
        height: 20px;
        width: 300px;
        background: #cccccc;
        padding: 2px 10px;
        margin-bottom: 2px;
      }
      input.delete-dataset {
        float: right;
      }
      #new-dataset-name {
        box-sizing: border-box;
        width: 100%;
      }
      a.dataset.dragover {
        background: #dddddd;
      }
      a.dataset.success {
        background: #99ff99;
      }
      a.dataset.failure {
        background: #ff9999;
      }
    javascript:
      var editing = #{{!!PlaneText::Config.webapp.editing}};
      var app_url = #{{JSON.dump(app_url)}};
  body
    #datasets
      - datasets.each do |dataset|
        a.dataset(href=url("#{app_url}/dataset/#{dataset}") rel=dataset)
          = dataset
          - if PlaneText::Config.webapp.editing
            input.delete-dataset(type="button" value="Delete")
      - if PlaneText::Config.webapp.editing
        div.new-dataset
          input#new-dataset-name(placeholder="New dataset name")
